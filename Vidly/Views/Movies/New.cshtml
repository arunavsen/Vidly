@model Vidly.ViewModels.MovieWithGenreViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>


@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(a => a.Movie.Name)
        @Html.TextBoxFor(a => a.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Movie.ReleasedDate)
        @Html.TextBoxFor(a => a.Movie.ReleasedDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId,
            new SelectList(Model.Genres, "Id", "Name"),
            "Select a Genree",
            new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(a => a.Movie.NumberInStock)
        @Html.TextBoxFor(a => a.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}